---
import { data } from "../../utils/constant";
---

<footer class="bg-slate-900 text-white">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-12 md:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <svg
            class="w-10 h-10 text-primary-500"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z"
            ></path>
            <path d="M9 12l2 2 4-4" stroke="white" stroke-width="2" fill="none"
            ></path>
          </svg>
          <div>
            <h3 class="text-xl font-bold">Elite-Elecon</h3>
            <p class="text-sm text-slate-300 mt-1">ELECTRICAL SOLUTIONS</p>
          </div>
        </div>

        <p class="text-slate-300 leading-relaxed">
          Professional electrical solutions for industrial, commercial, and
          residential needs. Your trusted partner for reliable and efficient
          electrical systems.
        </p>

        <!-- Social Media -->
        <div class="flex space-x-3 pt-2">
          {
            data.socialMedia.facebook && (
              <a
                href={data.socialMedia.facebook}
                class="w-8 h-8 flex items-center justify-center bg-slate-800 hover:bg-primary-500 rounded-full transition-colors duration-300"
                aria-label="Facebook"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                </svg>
              </a>
            )
          }
          {
            data.socialMedia.youtube && (
              <a
                href={data.socialMedia.youtube}
                class="w-8 h-8 flex items-center justify-center bg-slate-800 hover:bg-primary-500 rounded-full transition-colors duration-300"
                aria-label="Youtube"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                </svg>
              </a>
            )
          }

          {
            data.socialMedia.twitter && (
              <a
                href={data.socialMedia.twitter}
                class="w-8 h-8 flex items-center justify-center bg-slate-800 hover:bg-primary-500 rounded-full transition-colors duration-300"
                aria-label="Twitter"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.213c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                </svg>
              </a>
            )
          }

          {
            data.socialMedia.instagram && (
              <a
                href={data.socialMedia.instagram}
                class="w-8 h-8 flex items-center justify-center bg-slate-800 hover:bg-primary-500 rounded-full transition-colors duration-300"
                aria-label="Instagram"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                </svg>
              </a>
            )
          }
          {
            data.socialMedia.linkedin && (
              <a
                href={data.socialMedia.linkedin}
                class="w-8 h-8 flex items-center justify-center bg-slate-800 hover:bg-primary-500 rounded-full transition-colors duration-300"
                aria-label="LinkedIn"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                </svg>
              </a>
            )
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold text-white mb-4 relative pb-2">
          Quick Links
          <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-primary-500"
          ></span>
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href="/"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300 flex items-center group"
            >
              <svg
                class="w-4 h-4 mr-2 text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              Home
            </a>
          </li>
          <li>
            <a
              href="/about"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300 flex items-center group"
            >
              <svg
                class="w-4 h-4 mr-2 text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              About Us
            </a>
          </li>
          <li>
            <a
              href="/services"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300 flex items-center group"
            >
              <svg
                class="w-4 h-4 mr-2 text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              Our Services
            </a>
          </li>
          <li>
            <a
              href="/projects"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300 flex items-center group"
            >
              <svg
                class="w-4 h-4 mr-2 text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              Projects
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300 flex items-center group"
            >
              <svg
                class="w-4 h-4 mr-2 text-primary-500 opacity-0 group-hover:opacity-100 transition-opacity"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
              Contact Us
            </a>
          </li>
        </ul>
      </div>

      <!-- Services -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold text-white mb-4 relative pb-2">
          Our Services
          <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-primary-500"
          ></span>
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href="/services#industrial"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
              Civil Construction
            </a>
          </li>
          <li>
            <a
              href="/services#commercial"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
              Mechanical Services
            </a>
          </li>
          <li>
            <a
              href="/services#maintenance"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
             Solar Energy
            </a>
          </li>
          <li>
            <a
              href="/services#solar"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
              HVAC Systems
            </a>
          </li>
          <li>
            <a
              href="/services#automation"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
              Electrical Works
            </a>
          </li>
          <li>
            <a
              href="/services#emergency"
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
             Manpower Supply
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="space-y-4">
        <h4 class="text-lg font-semibold text-white mb-4 relative pb-2">
          Contact Info
          <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-primary-500"
          ></span>
        </h4>
        <ul class="space-y-4">
          <li class="flex items-start space-x-3">
            <svg
              class="w-5 h-5 text-primary-500 mt-0.5 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-slate-300">{data.address}</span>
          </li>
          <li class="flex items-center space-x-3">
            <svg
              class="w-5 h-5 text-primary-500 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <div class="space-y-1">
              <a
                href={"tel:" + data.mobile}
                class="text-slate-300 hover:text-primary-400 transition-colors duration-300 block"
              >
                {data.mobile}
              </a>
              <a
                href={"tel:" + data.mobile2}
                class="text-slate-300 hover:text-primary-400 transition-colors duration-300 block"
              >
                {data.mobile2}
              </a>
            </div>
          </li>
          <li class="flex items-center space-x-3">
            <svg
              class="w-5 h-5 text-primary-500 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <a
              href={"mailto:" + data.email}
              class="text-slate-300 hover:text-primary-400 transition-colors duration-300"
            >
              {data.email}
            </a>
          </li>
          <li class="flex items-center space-x-3">
            <svg
              class="w-5 h-5 text-primary-500 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-slate-300">{data.businessHours}</span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="bg-slate-950 py-6">
    <div class="container mx-auto px-4 md:px-8">
      <div
        class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
      >
        <div class="text-slate-400 text-sm">
          © {new Date().getFullYear()} Elite-Elecon. All rights reserved.
        </div>

        <div class="text-slate-400 text-sm">
          Designed with ❤️ by Elite-Elecon Team
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Smooth transitions for better UX */
  * {
    scroll-behavior: smooth;
  }

  /* Hover effects */
  a {
    transition: color 0.3s ease;
  }

  /* Focus styles */
  button:focus,
  input:focus {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .grid-cols-1 > * {
      margin-bottom: 2rem;
    }

    .grid-cols-1 > *:last-child {
      margin-bottom: 0;
    }
  }

  /* Animation for newsletter input */
  input:focus {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(255, 88, 4, 0.1);
  }
</style>
