---
import '@fancyapps/ui/dist/fancybox/fancybox.css';
const { projects, isProjectPage } = Astro.props
---

<section class="section bg-slate-50">
  <div class="container mx-auto px-4 md:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <div class="inline-flex items-center px-4 py-2 bg-primary-50 text-primary-700 rounded-full text-sm font-semibold mb-4">
        Project Gallery
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
        Our <span class="text-primary-600">Featured Work</span>
      </h2>
      <p class="text-lg text-slate-600">
        Click on any project to view detailed gallery and information.
      </p>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {projects.map((project, index) => (
        <div class="group relative overflow-hidden rounded-xl cursor-pointer transform transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl">
          <!-- Card Content with Fancybox trigger -->
          <div class="relative h-64 md:h-72 lg:h-80 overflow-hidden">
            <a 
              href={project.images[0]}
              data-fancybox={`gallery-${project.id}`}
              data-caption={`${project.name} - Image 1`}
              class="block w-full h-full"
            >
              <img 
                src={project.image} 
                alt={project.name}
                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                loading="lazy"
              />
              
              <!-- Gradient Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
              
              <!-- Project Info Overlay -->
              <div class="absolute inset-0 flex flex-col justify-end p-6">
                <div class="transform transition-transform duration-300 group-hover:translate-y-[-10px]">
                  <div class="flex items-center mb-2">
                    <span class="px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full">
                      {project.type}
                    </span>
                  </div>
                  <h3 class="text-xl font-bold text-white mb-1 group-hover:text-primary-300 transition-colors">
                    {project.name}
                  </h3>
                  <div class="flex items-center text-white/80 text-sm">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    <span>{project.location}</span>
                  </div>
                </div>
                
                <!-- View Button (Hidden by default, shows on hover) -->
                <div class="mt-4 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300">
                  <div class="inline-flex items-center px-4 py-2 bg-white text-slate-900 font-medium rounded-lg">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View Gallery
                  </div>
                </div>
              </div>
            </a>
          </div>
          
          <!-- Hidden additional images for the gallery - OUTSIDE the main anchor -->
          {project.images.slice(1).map((image, imgIndex) => (
            <a 
              href={image}
              data-fancybox={`gallery-${project.id}`}
              data-caption={`${project.name} - Image ${imgIndex + 2}`}
              style="display: none;"
            ></a>
          ))}
        </div>
      ))}
    </div>
    
    <!-- View All Projects Button -->
    {
      !isProjectPage &&     <div class="text-center mt-12">
      <a 
        href="/projects" 
        class="inline-flex items-center px-8 py-3 bg-slate-900 text-white hover:bg-slate-800 font-semibold rounded-lg transition-colors duration-300 group"
      >
        View All Projects
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
        </svg>
      </a>
    </div> 
    }
  </div>
</section>

<script>
  import { Fancybox } from "@fancyapps/ui";
  
  if (typeof window !== 'undefined') {
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize Fancybox
      Fancybox.bind("[data-fancybox]", {
        Thumbs: {
          type: "modern",
        },
        Toolbar: {
          display: {
            left: [],
            middle: [],
            right: ["close"],
          },
        },
        Carousel: {
          infinite: true,
          transition: "slide",
          Panzoom: {
            zoomFriction: 0.7,
            maxScale: 5,
          },
        },
        Images: {
          zoom: true,
          wheel: "zoom",
        },
        on: {
          reveal: (_fancybox: any, slide: any) => {
            // Add custom class to caption container
            const caption = slide.$caption;
            if (caption) {
              caption.classList.add('fancybox-caption-container');
            }
          },
        },
      });
    });
  }
</script>

<style>
  /* Custom Fancybox styles */
  .fancybox__caption {
    background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, transparent 100%);
    padding: 2rem !important;
  }
  
  .fancybox-caption-container {
    max-width: 800px !important;
    margin: 0 auto !important;
  }
  
  .fancybox-caption-content {
    width: 100%;
  }
  
  /* Customize Fancybox navigation buttons */
  .fancybox__nav {
    --f-button-next-pos: 2rem;
    --f-button-prev-pos: 2rem;
  }
  
  .f-button {
    background: rgba(255, 88, 4, 0.8) !important;
    color: white !important;
    width: 3rem !important;
    height: 3rem !important;
  }
  
  .f-button:hover {
    background: var(--color-primary-600) !important;
  }
  
  /* Customize thumbnails */
  .f-thumbs__viewport {
    background: rgba(0, 0, 0, 0.5) !important;
  }
  
  .f-thumbs__slide__button {
    border-radius: 0.5rem;
    overflow: hidden;
  }
  
  /* Customize progress bar */
  .fancybox__progress {
    background: var(--color-primary-500) !important;
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .fancybox__caption {
      padding: 1rem !important;
    }
    
    .fancybox-caption-content .grid {
      grid-template-cols: repeat(2, 1fr) !important;
    }
    
    .f-button {
      width: 2.5rem !important;
      height: 2.5rem !important;
    }
  }
</style>