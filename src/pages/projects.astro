---

<Layout>
  <!-- Hero Section for Projects Page -->
  <section
    class="relative bg-gradient-to-r from-primary-900 to-primary-800 text-white py-16 md:py-24"
  >
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1504917595217-d4dc5ebe6122?auto=format&fit=crop&w=1920&q=80"
        alt="Projects Background"
        class="w-full h-full object-cover opacity-20"
      />
    </div>
    <div class="container relative mx-auto px-4 md:px-8">
      <div class="max-w-3xl">
        <div
          class="inline-flex items-center px-4 py-2 bg-white/20 text-white rounded-full text-sm font-semibold mb-4"
        >
          Our Portfolio
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          All <span class="text-primary-300">Projects</span>
        </h1>
        <p class="text-lg md:text-xl text-primary-100 mb-8">
          Browse through our complete portfolio of successful projects across
          India. Each project represents our commitment to excellence, quality,
          and client satisfaction.
        </p>
      </div>
    </div>
  </section>

  <!-- Projects Gallery Section (Reusing your component) -->
  <ProjectsGallery projects={projects} isProjectPage={true} />

  <!-- Additional Info Section -->
  <section class="section bg-slate-50">
    <div class="container mx-auto px-4 md:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
