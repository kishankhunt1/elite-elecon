  </section>

  <!-- Service Areas Section -->
  <section class="section bg-white">
    <div class="container mx-auto px-4 md:px-8">
      <div class="text-center max-w-3xl mx-auto mb-12">
        <div
          class="inline-flex items-center px-4 py-2 bg-primary-50 text-primary-700 rounded-full text-sm font-semibold mb-4"
        >
          Service Areas
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
          We Serve Across <span class="text-primary-600">India</span>
        </h2>
        <p class="text-lg text-slate-600">
          Providing engineering solutions across major cities and industrial
          hubs in India.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div
          class="text-center p-6 bg-slate-50 rounded-xl hover:bg-primary-50 transition-colors duration-300"
        >
          <div class="text-3xl font-bold text-primary-600 mb-2">Gujarat</div>
          <div class="text-sm text-slate-600">
            Junagadh, Rajula, Vadodara, Bharuch, Ahmedabad
          </div>
        </div>
        <div
          class="text-center p-6 bg-slate-50 rounded-xl hover:bg-primary-50 transition-colors duration-300"
        >
          <div class="text-3xl font-bold text-primary-600 mb-2">
            Maharashtra
          </div>
          <div class="text-sm text-slate-600">
            Mumbai, Pune, Nagpur, Nashik, Aurangabad
          </div>
        </div>
        <div
          class="text-center p-6 bg-slate-50 rounded-xl hover:bg-primary-50 transition-colors duration-300"
        >
          <div class="text-3xl font-bold text-primary-600 mb-2">Rajasthan</div>
